html{
    background-color: #f2f2f2;
}
.white_color{
    background-color: white !important;
}
._border{
    border: 1px solid blue;
}
/* deal */
.barStyle{
    height: 2.2rem;
}
.barStyle a{
    line-height: 1.2rem !important;
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 100%;
    padding: 0.2rem 0.4rem !important;
    margin-top: 0.3rem;
}
.barStyle a:before{
    margin-left: -0.2rem;
    color: white;
}
.barStyle .title{
    line-height: 2.2rem !important;
    font-size: 1.2rem;
    font-family: "微软雅黑";
}
.bannerTop{
    top: 2.2rem !important;
}
.contentBtnMargin{
    margin: 0rem;
}
/* deal */
/*顶部按钮*/
.row .col-40{
    width: 24%;
    height: 100%;
}
.left-col{
    margin-left: 0% !important;
}
.middle-col{
    width: 32% !important;
    margin-left: 10% !important;
}
.right-col{
    margin-left: 9.5% !important;
}
.middle-col-border{
    width: 6.5rem;
    height: 4rem;
    margin: 0 -0.6rem;
    border-left: 1px solid rgb(213, 213, 213);
    border-right: 1px solid rgb(213, 213, 213);
}
.btn_parent{
    /*border: 1px dashed #867f7f;*/
    margin-left: 0%;
    padding-top: 1.2rem;
    height: 8rem;
}
.btn_parent p{
    width: 100%;
    height: 2rem;
    font-size: 0.8rem;
    line-height: 2rem;
    display: block;
    margin-top: 5px;
    text-align: center;
}
.row-btn-1{
    width: 4rem;
    height: 4rem;
    margin: 0 auto;
}
.mg_head_title{
    font-size: 1rem;
    padding: 0.2rem 0.8rem;
    margin-top: 0.5rem;
}
.new-game-line{
    color: rgb(220, 158, 40);
}
.preference-game-line{
    color: rgb(59, 184, 34);
}
.all-game-line{
    color: rgb(51, 153, 204);
}
/* 最新游戏 */
.new_game_parent{
    background-color: #f2f2f2;
}
.new_game_parent li{

}
.new_game_parent p{
    margin: 1rem 0.6rem;
}
.type-icon-1{
    background-image: url('../../assets/img/type_icon_1.png');
}
.type-icon-2{
    background-image: url("../../assets/img/type_icon_2.png");
}
.type-icon-3{
    background-image: url("../../assets/img/type_icon_3.png");
}
.type-icon-4{
    background-image: url("../../assets/img/type_icon_4.png");
}
.button{
    border-radius: 0.8rem;
}
/* 游戏专场 */
.game_preference_li{
    width: 50% !important;
}
.game_preference_icon{
    width: 8rem !important;
    height: 4rem !important
}
@media screen and (width: 375px) and (height: 667px){
    .game_preference_icon{
        width: 10rem !important;
        height: 5rem !important
    }
    .game_preference_li{
        width: 50% !important;
        height: 7.5rem !important;
    }
    .middle-col-border{
        width: 8rem;
        height: 4rem;
        margin: 0 -0.65rem;
        border-left: 1px solid rgb(213, 213, 213);
        border-right: 1px solid rgb(213, 213, 213);
    }
}
.game_preference_icon_1{
    background-image: url("../../assets/img/game_preference_icon_1.png");
}
.game_preference_icon_2{
    background-image: url("../../assets/img/game_preference_icon_2.png");
}
.game_preference_name{
    width:50%;
    float:left;
    text-align: left;
}
.game_preference_into{
    width:45%;
    margin-left:55%;
    margin-top:-9px;
}
/* 所有游戏 */
.all_game_info{
    margin-left: 10px;
}
.all_game_button{
    padding: 0 1rem !important;
}
.icon_zan{
    background: url('../../assets/img/icon_zan.png') no-repeat center;
    background-size: 30px 30px;
    width: 30px;
    height: 30px;
    display: block;
    float: left;
}
.zan_num{
    display: block;
    margin-left: 35px;
    margin-top: 0.3rem;
    width: 8rem;
}
.moreGame{
    display: block;
    width: 5.5rem;
    margin-left: 16rem;
    margin-top: -1.6rem; 
}